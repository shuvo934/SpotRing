                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="Notes"
                            android:gravity="center|start"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_margin="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/belize_hole"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:layout_margin="1dp"
                            app:boxCornerRadiusTopStart="0dp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="filled"
                            app:boxStrokeWidth="0dp"
                            app:helperTextEnabled="true"
                            app:hintEnabled="false"
                            android:textColorHint="@color/belize_hole"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/event_description_for_saving_geofences"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:ems="10"
                                android:gravity="center|start"
                                android:inputType="text"
                                android:fontFamily="@font/poppins_bold"
                                android:maxLines="2"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:padding="@dimen/_8sdp"
                                android:background="@null"
                                android:imeOptions="actionDone"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/belize_hole_a">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/custom_border"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="Event Type"
                            android:gravity="center|start"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_margin="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/belize_hole"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinner_layout_event_type"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:layout_margin="1dp"
                            app:boxCornerRadiusTopStart="0dp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="filled"
                            app:boxStrokeWidth="0dp"
                            app:helperTextEnabled="true"
                            app:hintEnabled="false"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/double_arrow_24"
                            app:endIconTint="@color/belize_hole"
                            android:clickable="true"
                            android:focusable="false"
                            android:textColorHint="@color/belize_hole"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/event_type_for_saving_geofences"
                                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="None"
                                android:ems="10"
                                android:gravity="center|end"
                                android:inputType="textMultiLine"
                                android:fontFamily="@font/poppins_bold"
                                android:clickable="true"
                                android:focusable="false"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:padding="@dimen/_8sdp"
                                android:background="@null"
                                android:imeOptions="actionDone"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/event_type_missing_msg"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_9sdp"
                    android:layout_height="wrap_content"
                    android:text="Please Select Event Type"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/belize_hole_a">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/custom_border"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="Alert Type"
                            android:gravity="center|start"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_margin="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/belize_hole"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinner_layout_alert_type"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:layout_margin="1dp"
                            app:boxCornerRadiusTopStart="0dp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="filled"
                            app:boxStrokeWidth="0dp"
                            app:helperTextEnabled="true"
                            app:hintEnabled="false"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/double_arrow_24"
                            app:endIconTint="@color/belize_hole"
                            android:clickable="true"
                            android:focusable="false"
                            android:textColorHint="@color/belize_hole"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/alert_type_for_saving_geofences"
                                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Alarm"
                                android:ems="10"
                                android:gravity="center|end"
                                android:inputType="textMultiLine"
                                android:fontFamily="@font/poppins_bold"
                                android:clickable="true"
                                android:focusable="false"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:padding="@dimen/_8sdp"
                                android:background="@null"
                                android:imeOptions="actionDone" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/alert_type_missing_msg"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_9sdp"
                    android:layout_height="wrap_content"
                    android:text="Please Select Alert Type"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/belize_hole_a">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/custom_border"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
