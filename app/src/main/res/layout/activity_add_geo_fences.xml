<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".geofences.AddGeoFences">

    <RelativeLayout
        android:id="@+id/add_geo_fences_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/app_bar_add_geo_fences"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="@dimen/_46sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_app_bar_design_revert"/>

            <ImageView
                android:id="@+id/back_icon_add_geo_fences"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/arrow_back"
                app:tint="@color/belize_hole"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/app_icon_geo_fences"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/spot_ring_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/app_bar_name_geofence_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:gravity="center"
                android:layout_toEndOf="@+id/back_icon_add_geo_fences"
                android:layout_toStartOf="@+id/app_icon_geo_fences"
                android:fontFamily="@font/poppins_bold"
                android:text="ADD EVENT"
                android:textColor="@color/belize_hole"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/add_geo_fences_scrolls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/button_layout_geo"
            android:layout_below="@+id/app_bar_add_geo_fences"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:scrollbars="none"
            android:layout_marginEnd="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
