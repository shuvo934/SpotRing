                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="10"
                    android:layout_margin="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Set Location With Radius"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:textColor="@color/belize_hole"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_11sdp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/saved_radius_for_location_in_geofeces"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Radius: 150 Meters"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_gravity="center"
                            android:textColor="@color/midnight_blue"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/map_image_saved_card_view_in_geofences"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_85sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:cardElevation="@dimen/_2sdp"
